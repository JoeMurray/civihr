<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/HRJob</base>
  <class>HRJobHealth</class>
  <name>civicrm_hrjob_health</name>
  <comment>Contract terms relating to healthcare</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique HRJob ID</comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>job_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to Job</comment>
  </field>
  <foreignKey>
    <name>job_id</name>
    <table>civicrm_hrjob</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>provider</name>
    <title>Healthcare Provider</title>
    <type>varchar</type>
    <length>63</length>
    <comment>The organization or company which manages healthcare service</comment>
    <pseudoconstant>
      <optionGroupName>hrjob_health_provider</optionGroupName>
    </pseudoconstant>
  </field>
  <index>
    <name>index_provider</name>
    <fieldName>provider</fieldName>
  </index>

  <field>
    <name>plan_type</name>
    <type>enum</type>
    <values>Family, Individual</values>
    <comment>.</comment>
  </field>
  <index>
    <name>index_plan_type</name>
    <fieldName>plan_type</fieldName>
  </index>

  <field>
    <name>description</name>
    <type>text</type>
  </field>

  <field>
    <name>dependents</name>
    <type>text</type>
  </field>
</table>
